{
  "name": "{{ project_slug }}",
  "esy": {
    "build": "dune build -p #{self.name}",
    {%- if syntax == 'Reason' %}
    "buildDev": "refmterr dune build --root . --only-package #{self.name}",
    {% else %}
    "buildDev": "dune build --root . --only-package #{self.name}",
    {% endif -%}
    "buildEnv": {
      "ODOC_SYNTAX": "{% if syntax == 'Reason' %}re{% else %}ml{% endif %}"
    }
  },
  "dependencies": {
    "@opam/dune": ">= 2.0",
    "@opam/async_kernel": "*",
    "@opam/incr_dom": ">= 0.14",
    "@opam/js_of_ocaml": "*",
    "@opam/ppx_jane": "*",
    "@opam/ppx_deriving": "*",
    {%- if syntax == 'Reason' %}
    "@opam/reason": "*",
    {%- endif %}
    "ocaml": ">= 4.8.1000"
  },
  "devDependencies": {
    "@opam/dune-release": "*",
    "@opam/merlin": "*",
    {% if syntax == 'OCaml' -%}
    "@opam/ocamlformat": "*",
    {% endif -%}
    "@opam/odoc": "*",
    "@opam/utop": "*",
    {%- if syntax == 'Reason' %}
    "refmterr": ">= 3.3.0",
    {%- endif %}
    "ocaml": "~4.09.0",
    {%- if css_framework == 'TailwindCSS' %}
    "libnpx": "^10.2.4",
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@tailwindcss/ui": "^0.5.0",
    "autoprefixer": "^9.8.6",
    "cssnano": "^4.1.10",
    "cross-env": "^7.0.2",
    "serve": "^11.3.2",
    "tailwindcss": "^1.6.2"
    {%- else -%}
    "serve": "^11.3.2"
    {%- endif %}
  },
  "scripts": {
    "start": "esy serve -s asset/static/",
    "test": "esy dune build @test/runtest -f",
    "doc": "esy dune build @doc",
    "doc-path": "esy echo #{self.target_dir}/default/_doc/_html/index.html",
    "format": "esy dune build @fmt --auto-promote",
    "watch": "esy dune build -p #{self.name} --watch",
    "utop": "esy dune utop lib -- -implicit-bindings"
  }
}