(name test)
(description "Test template")
(spin_version 0.6.0)


(generator
  (name cmd)
  (description "Generate a subcommand for the CLI.")

  (config cmd_name
    (default test))

  (message (concat 
    "You need to add `Cmd_"
    (snake_case :cmd_name)
    ".cmd` to your list of commands in bin/main.ml"))

  (files
    (cmd.ml (concat bin/commands/cmd_ :cmd_name .ml)))
)
